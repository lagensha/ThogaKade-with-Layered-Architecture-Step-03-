<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.ecom.controller.OrderDetailsController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="715.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/pic4.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="txtOrderId" layoutX="46.0" layoutY="38.0" promptText="Order Id" />
      <TextField fx:id="txtItemCode" layoutX="296.0" layoutY="38.0" promptText="Item Code" />
      <TextField fx:id="txtOrderQTY" layoutX="535.0" layoutY="38.0" promptText="OrderQTY" />
      <TextField fx:id="txtDiscount" layoutX="296.0" layoutY="85.0" promptText="Discount" />
      <Button layoutX="58.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnAddOnAction" prefHeight="37.0" prefWidth="79.0" text="Add">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <Button layoutX="227.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="41.0" prefWidth="93.0" text="Update">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <Button layoutX="416.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="41.0" prefWidth="93.0" text="Delete">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <Button layoutX="591.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnResetOnAction" prefHeight="41.0" prefWidth="93.0" text="Reset">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <TableView fx:id="tblOrderDetails" layoutX="46.0" layoutY="200.0" prefHeight="200.0" prefWidth="593.0">
        <columns>
          <TableColumn fx:id="colOrderId" prefWidth="147.5" text="Order Id" />
            <TableColumn fx:id="colItemCode" prefWidth="147.5" text="Item Code" />
            <TableColumn fx:id="colOrderQTY" prefWidth="147.5" text="OrderQTY" />
            <TableColumn fx:id="colDiscount" prefWidth="147.5" text="Discount" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
