<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.ecom.controller.OrderController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="711.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/pic3.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="txtOrderId" layoutX="48.0" layoutY="36.0" promptText="Order Id" />
      <TextField fx:id="txtOrderDate" layoutX="290.0" layoutY="36.0" promptText="Order Date" />
      <TextField fx:id="txtCustomerId" layoutX="538.0" layoutY="36.0" promptText="Customer Id" />
      <Button layoutX="48.0" layoutY="102.0" mnemonicParsing="false" onAction="#btnAddOnAction" prefHeight="37.0" prefWidth="79.0" text="Add">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <Button layoutX="217.0" layoutY="102.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="41.0" prefWidth="93.0" text="Update">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <Button layoutX="412.0" layoutY="102.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="41.0" prefWidth="93.0" text="Delete">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <Button layoutX="581.0" layoutY="102.0" mnemonicParsing="false" onAction="#btnResetOnAction" prefHeight="41.0" prefWidth="93.0" text="Reset">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <TableView fx:id="tblOrderTable" layoutX="130.0" layoutY="186.0" prefHeight="215.0" prefWidth="470.0">
        <columns>
          <TableColumn fx:id="colOrderId" prefWidth="164.0" text="OrderId" />
            <TableColumn fx:id="colOrderDate" prefWidth="165.5" text="OrderDate" />
            <TableColumn fx:id="colCustomerId" prefWidth="139.5" text="CustomerId" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
