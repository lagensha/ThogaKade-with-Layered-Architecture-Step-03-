<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.ecom.controller.ItemController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/pic2.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="txtItemCode" layoutX="14.0" layoutY="31.0" promptText="ItemCode" />
      <TextField fx:id="txtDescription" layoutX="226.0" layoutY="31.0" promptText="Description" />
      <TextField fx:id="txtPackSize" layoutX="426.0" layoutY="31.0" promptText="PackSize" />
      <TextField fx:id="txtUnitPrice" layoutX="77.0" layoutY="68.0" promptText="UnitPrince" />
      <TextField fx:id="txtQtyOnHand" layoutX="286.0" layoutY="68.0" promptText="QTYOnHand" />
      <Button layoutX="60.0" layoutY="108.0" mnemonicParsing="false" onAction="#btnAddOnAction" prefHeight="37.0" prefWidth="79.0" text="Add">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <Button layoutX="193.0" layoutY="108.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="41.0" prefWidth="93.0" text="Update">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <Button layoutX="342.0" layoutY="108.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="41.0" prefWidth="93.0" text="Delete">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <Button layoutX="482.0" layoutY="108.0" mnemonicParsing="false" onAction="#btnResetOnAction" prefHeight="41.0" prefWidth="93.0" text="Reset">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <TableView fx:id="tblItemTable" layoutX="14.0" layoutY="200.0" prefHeight="200.0" prefWidth="564.0">
        <columns>
          <TableColumn fx:id="colItemCode" prefWidth="114.0" text="ItemCode" />
            <TableColumn fx:id="colDescription" prefWidth="114.0" text="Description" />
            <TableColumn fx:id="colPackSize" prefWidth="114.0" text="PackSize" />
            <TableColumn fx:id="colUnitPrize" prefWidth="114.0" text="UnitPrice" />
            <TableColumn fx:id="colQtyOnHand" prefWidth="114.0" text="QTYOnHand" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
